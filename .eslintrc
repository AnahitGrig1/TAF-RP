{
  "root": true,
  "ignorePatterns": [ "/node_modules", "/build", "/artifacts" , "/allure-report", "/allure-results"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jasmine": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },


  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"]
 }
}
