{
  "root": true,
  "ignorePatterns": [ "/node_modules", "/build", "/artifacts" , "/allure-report", "/allure-results"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true,
    "cypress/globals": true
  },
  "extends": ["eslint:recommended","plugin:cypress/recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },

  "plugins": [
    "cypress"
  ],
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"]
 }
}
